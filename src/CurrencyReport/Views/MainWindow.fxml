<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="CurrencyReport.Views.MainWindowController"
            xmlns:fx="http://javafx.com/fxml" fx:id="borderPane">
    <center>
        <VBox alignment="CENTER" spacing="50">
            <Label text="\$ Currency Report $" textAlignment="CENTER" style="-fx-font-size: 32px;"/>
            <VBox alignment="CENTER" spacing="25">
                <Button text="Aktualna tabela kursów" textAlignment="CENTER" onAction="#loadCurrencyTable" style="-fx-background-radius: 30px;"/>
                <Button text="Dane szczegółowe waluty" textAlignment="CENTER" onAction="#loadSingleCurrency" style="-fx-background-radius: 30px;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>